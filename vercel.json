{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/:file*.(js|css|png|jpg|jpeg|gif|svg|ico|txt|json)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/api/:match*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html",
      "has": [
        { "type": "header", "key": "Accept", "value": "text/html" }
      ],
      "missing": [
        { "type": "file", "path": "/:path*" }
      ]
    }
  ]
}
