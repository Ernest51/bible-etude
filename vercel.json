{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/dist/(.*)", "destination": "/public/dist/$1" }
  ],
  "headers": [
    {
      "source": "/src/(.*)\\.js",
      "headers": [{ "key": "Content-Type", "value": "application/javascript; charset=utf-8" }]
    },
    {
      "source": "/dist/(.*)\\.css",
      "headers": [{ "key": "Content-Type", "value": "text/css; charset=utf-8" }]
    }
  ]
}
